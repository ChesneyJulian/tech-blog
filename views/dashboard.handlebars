<div class="container">
  <h2>{{username}}'s Dashboard</h2>
  {{#unless posts}}
  <div style="text-align: center;">
    <h5>No posts created</h5>
  </div>
  {{/unless}} 
  <div style="text-align: center;">
    <a href="#new-post">Create a new post</a>
  </div>
  {{#each posts}}
  <div class="container">
  <a href="/user-post/{{id}}">
    <article class="card">
      <div>
        <h3>{{title}}</h3>
        <p>{{content}}</p>
      </div>
      <footer style="background-color: rgba(112, 159, 182, 0.564);">
        <p style="text-align: right;">Posted on {{format_date createdAt}}</p>
      </footer>
    </article>
 </a>
</div>
{{/each}}
  <footer class="container">
    <form id="new-post">
      <label for="new-post">
        Create a New Post
        <input type="text" id="title" name="title" placeholder="Title" required>
        <input type="text" id="content" name="content" placeholder="Content..." required>
      </label>
      <button type="submit">Submit</button>
    </form>
  </footer>
</div>

<script src ="../js/createPost.js"></script>