<div class="container">
  {{#unless user.posts}}
  <div style="text-align: center;">
    <h5>No posts created</h5>
  </div>
  {{/unless}} 
  <div style="text-align: center;">
    <a href="#new-post">Create a new post</a>
  </div>
  {{#each user.posts}}
  {{log user.posts}}
  <div class="container">
  <a href="/post/{{id}}">
    <article class="card">
    <h3>{{title}}</h3>
    <p>{{content}}</p>
     {{#each comments}}
    <footer style="background-color: rgba(112, 159, 182, 0.564);">
    <p>Comment by {{username}}: {{content}}</p>
    </footer>
  {{/each}}
  </article>
 </a>
</div>
{{/each}}
  <footer style="position: sticky;" class="container">
    <form id="new-post">
      <label for="new-post">
        Create a New Post
        <input type="text" id="title" name="title" placeholder="Title" required>
        <input type="text" id="content" name="content" placeholder="Content..." required>
      </label>
      <button type="submit">Submit</button>
    </form>
  </footer>
</div>

<script src ="/js/createPost.js"></script>